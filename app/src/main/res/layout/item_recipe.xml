<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:clipChildren="false"
    android:background="@color/muted_light_green"
    android:elevation="2dp"
    android:gravity="bottom|center|start|right|top"
    android:padding="2dp"
    app:barrierMargin="2dp">


    <ImageView
        android:id="@+id/iv_recipePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_color_shape"
        android:layout_below="@+id/iv_recipePhoto"
        android:layout_marginTop="5dp"
        android:textSize="24sp"
        tools:text="Brownies" />

    <TextView
        android:id="@+id/tv_cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:background="@drawable/solid_color_shape"
        android:layout_marginTop="5dp"
        android:textSize="19sp"
        tools:text="American" />
</RelativeLayout>